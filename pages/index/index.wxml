<view class="cu-card case" wx:key="i" wx:for="i in 10">
  <view class="cu-item shadow b-shadow">
    <view class="image">
      <!-- <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="widthFix"></image> -->
      <!-- <view class="cu-tag bg-blue">推荐</view> -->
      <view class="cu-card article">
        <view class="cu-item">
          <view>
            <view class="flex padding justify-center margin-top">
              <view class="text-xl text-bold">张三</view>
            </view>
            <view class="cu-list menu">
              <view class="cu-item">
                <view class="content">
                  <text class="cuIcon-home text-grey"></text>
                  <text class="text-grey">公司：北京百度网讯科技有限公司</text>
                </view>
              </view>
              <view class="cu-item">
                <view class="content">
                  <text class="cuIcon-people text-grey"></text>
                  <text class="text-grey">职位：P7 前端工程师</text>
                </view>
              </view>
              <view class="cu-item">
                <view class="content">
                  <text class="cuIcon-activity text-grey"></text>
                  <text class="text-grey">方向：社招（推荐）</text>
                </view>
              </view>
              <view class="cu-item">
                <view class="content">
                  <text class="cuIcon-medal text-grey"></text>
                  <text class="text-grey">教育：2016 深圳大学硕士</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="cu-list menu-avatar color-gray">
      <view class="flex">
        <view class="flex-sub padding-sm margin-xs radius">
          <button class="cu-btn round shadow block bg-blue" bindtap="noticeHR"><text class="cuIcon-comment"></text>聊一聊</button>
        </view>
        <view class="flex-sub padding-sm margin-xs radius">
          <button class="cu-btn round shadow block bg-blue" bindtap="goToDetail"><text class="cuIcon-copy"></text>详情</button>
        </view>
      </view>
    </view>
  </view>

</view>